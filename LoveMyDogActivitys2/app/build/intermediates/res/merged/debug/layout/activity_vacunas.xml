<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a42567367.lovemydogactivitys2.Vacunas"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Vacunas"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="45 días de vida: Vacuna contra el Parvovirus"/>
        <CheckBox
            android:id="@+id/cb45dias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="9 semanas de vida: Vacuna contra Moquillo canino y Hepatitis infecciosa C"/>
        <CheckBox
            android:id="@+id/cb9semanas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="12 semanas de vida: se repite una dosis de la vacuna anterior y la segunda de Parvovirus"/>
        <CheckBox
            android:id="@+id/cb12semanas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="4 meses de edad: la vacuna contra la Rabia"/>
        <CheckBox
            android:id="@+id/cb4meses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="2 años de vida: Repeticion de las 4 vacunas"/>
        <CheckBox
            android:id="@+id/cb2años"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="PresionarBoton"
        android:textAlignment="center"
        android:text="Grabar" />


</LinearLayout>
